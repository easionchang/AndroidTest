<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/listview_item_bg">

    <LinearLayout
        android:id="@+id/menu_item_divider"
        android:layout_width="fill_parent"
    	android:layout_height="2px"
    	android:background="#768696"/>
    
    <ImageView
        android:id="@+id/menu_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/download_manager"
        android:layout_marginLeft="5dip"
        android:layout_centerVertical="true"/>
        
    <TextView
        android:id="@+id/menu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4684D7"
        android:textSize="20sp"
        android:layout_toRightOf="@id/menu_img"
        android:layout_marginLeft="5dip"
        android:layout_centerVertical="true"/>
    
</RelativeLayout>
