<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:custom="http://schemas.android.com/apk/res/cn.flyrise.android3.test"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <cn.flyrise.android3.test.custom.PieChart
        android:id="@+id/Pie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:background="@android:color/white"
        android:padding="10dp"
        custom:autoCenterPointerInSlice="true"
        custom:highlightStrength="1.12"
        custom:labelColor="@android:color/black"
        custom:labelHeight="20dp"
        custom:labelPosition="left"
        custom:labelWidth="110dp"
        custom:labelY="85dp"
        custom:pieRotation="0"
        custom:pointerRadius="4dp"
        custom:showText="true" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reset_button" />

</LinearLayout>