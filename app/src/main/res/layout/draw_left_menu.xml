<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB">
    
    <Button 
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  注销账号"
        android:textColor="#4684D7"
        android:textSize="15sp"
        android:drawableLeft="@drawable/exit"
        android:background="@drawable/listview_item_bg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dip"
        android:layout_marginTop="20dip"/>
    
	<cn.flyrise.android3.test.view.content.CircleImageView
	   xmlns:app="http://schemas.android.com/apk/res-auto"
	   android:id="@+id/headicon_img"
	   android:layout_width="80dip"
	   android:layout_height="80dip"
	   android:src="@drawable/beach"
	   app:border_color="#4684D7"
	   app:border_width="3dp"
       android:layout_marginTop="20dip"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/exit_btn"/>
    
    <TextView 
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张冰   会计"
        android:textColor="#4684D7"
        android:textSize="18sp"
        android:layout_marginTop="5dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/headicon_img"/>
    
    <TextView 
        android:id="@+id/department_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运营中心--财务部"
        android:textColor="#768696"
        android:textSize="15sp"
        android:layout_marginTop="5dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name_tv"/>
        
    <ListView 
        android:id="@+id/left_menu_lst"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/department_tv"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="20dip"
        android:divider="@null" 
        android:dividerHeight="1px"
        android:cacheColorHint="@android:color/transparent"/>
    
</RelativeLayout>
